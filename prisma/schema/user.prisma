model User {
  id                  Int        @id @default(autoincrement())
  email               String     @unique
  username            String     @unique
  name                String
  password            String
  profileImage        String?
  posts               Post[]
  comments            Comment[]
  likes               PostLike[]
  resetToken          String?
  resetTokenExpiresAt DateTime?
  createdAt           DateTime   @default(now())
  updatedAt           DateTime   @updatedAt
}
